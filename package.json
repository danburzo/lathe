{
	"name": "lathe",
	"version": "0.1.0",
	"main": "index.js",
	"repository": "git@github.com:forklor/lathe.git",
	"author": "Dan Burzo <danburzo@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"husky": "^2.7.0",
		"parcel-bundler": "^1.12.3",
		"parcel-plugin-bundle-manifest": "^0.2.0",
		"parcel-plugin-imagemin": "^3.0.0",
		"prettier": "1.18.2",
		"pretty-quick": "^1.11.1"
	},
	"scripts": {
		"watch": "parcel watch -d static/dist --public-url . --no-source-maps assets-manifest.html",
		"build": "parcel build -d static/dist --public-url . --no-source-maps assets-manifest.html",
		"prebuild": "rm -rf static/dist"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"printWidth": 80
	}
}
