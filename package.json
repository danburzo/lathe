{
	"name": "lathe",
	"version": "0.4.0",
	"main": "index.js",
	"repository": "git@github.com:danburzo/lathe.git",
	"author": "Dan Burzo <dan@danburzo.ro>",
	"license": "MIT",
	"devDependencies": {
		"esbuild": "^0.12.18",
		"husky": "^4.3.8",
		"opsh": "^1.0.0",
		"prettier": "2.3.2",
		"pretty-quick": "^3.1.1"
	},
	"scripts": {
		"start": "./build-assets.js start --outdir build",
		"build": "rm -rf build && ./build-assets.js build --outdir build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"printWidth": 80
	}
}
