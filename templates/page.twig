{% extends "base.twig" %}

{% block content %}
<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
	
	{% if post.thumbnail %}
	<div class='post__image'>
		<img src='{{Image(post.thumbnail).src}}'/>
	</div>
	{% endif %}

	{% block byline %}
	<h1>{{ post.title }}</h1>
	{% endblock byline %}
	
	{{ post.content }}
	
</article>
{% endblock content %}
