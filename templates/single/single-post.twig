{% extends "base.twig" %}

{% block content %}
	<article {{fn('post_class')}} id="post-{{ post.ID }}">
		<div class='post__image'>
			{% if post.thumbnail %}
				<img src='{{TimberImage(post.thumbnail.src)}}'/>
			{% endif %}
		</div>

		<div class='post__header'>
			<h1>{{ post.title }}</h1>
			<p class='post__date'>{{ post.post_date | date("d/m/Y") }}</p>
		</div>
		
		<div class='post__content'>
			{{ post.content }}
		</div>
	</article>
{% endblock %}
