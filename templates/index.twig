{% extends "base.twig" %}

{% block content %}
	{% if posts | length %} 
		{% for post in posts %}
			{% 
				include [
					'tease/tease-' ~ post.post_type ~ '.twig', 
					'tease/tease.twig'
				] 
			%}
		{% endfor %}

		{% 
			include 'components/pagination.twig' with {
				pagination: posts.pagination
			} 
		%}
	{% else %}
		{% block no_content %}
			{{__("No articles", "lathe") }}
		{% endblock %}
	{% endif %}
{% endblock %}